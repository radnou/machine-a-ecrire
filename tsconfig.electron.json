{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS", // Electron utilise CommonJS pour son processus principal
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist-electron", // Dossier de sortie pour les fichiers Electron transpil√©s
    "rootDir": "electron",
    "resolveJsonModule": true
  },
  "include": ["electron/**/*.ts"],
  "exclude": ["node_modules"]
}
